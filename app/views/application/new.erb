<form action="/figures" method="post">

  <label> Figure Name</label>
  <input type="text" name="figure[name]">
  <br>

  <label> Titles </label>

  <% Title.all.each do |title| %>
   <br>
     <input id="<%= title.name %>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>">
   <% end %>


  <br>
  <label> Or Create a New Title: </label>
  <input type="text" name="title[name]">

  <br>
  <label> Figure Landmarks </label>
  <input type="text" name="figure[landmark_ids][]">
  <br>
  <label>Landmark Name</label>
  <input type="text" name="landmark[name]">
  <br>

<input type="submit" value="Create">

</form>
