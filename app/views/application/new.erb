<form action="/figures" method="post">

  <label> Figure Name</label>
  <input type="text" name="figure[name]">
  <br>
  <br>

  <label> Titles </label>

  <% Title.all.each do |title| %>
   <br>
     <input id="<%= title.name %>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>"> <%= title.name %> </input>
   <% end %>


  <br>
  <label> Or Create a New Title: </label>
  <input type="text" name="title[name]">
  <br>
  <br>
  <label> Select existing landmarks </label>
  <% Landmark.all.each do |landmark| %>
   <br>
     <input id="<%= landmark.name %>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>"> <%= landmark.name %> </input>
   <% end %>

  <br>
  <br>
  <label>Or create a new Landmark: </label>
  <br>
  <label>Landmark Name </label>
  <input type="text" name="landmark[name]">
  <br>

  <label>Landmark Year </label>
  <input type="text" name="landmark[year_completed]">
  <br>
<input type="submit" value="Create">

</form>
